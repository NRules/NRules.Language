<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\..\Common.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\..\SigningKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.CodeGenerator" Version="4.6.5" />
    <PackageReference Include="Antlr4.Runtime" Version="4.6.5" />
    <PackageReference Include="NRules.RuleModel" Version="0.8.4" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\..\GlobalAssemblyInfo.cs" Link="Properties\GlobalAssemblyInfo.cs" />
    <Compile Include="..\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <Antlr4 Update="Grammar\RuleSharpLexer.g4">
      <CustomToolNamespace>NRules.RuleSharp</CustomToolNamespace>
    </Antlr4>
    <Antlr4 Update="Grammar\RuleSharpParser.g4">
      <CustomToolNamespace>NRules.RuleSharp</CustomToolNamespace>
    </Antlr4>
  </ItemGroup>
  
</Project>